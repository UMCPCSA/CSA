<%= form_for(:event, :html=> {:class=>"form-horizontal"}) do |f| %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Name: </label>
    <div class="col-sm-10">
      <%= f.text_field :name, :class=>"form-control", :id=>"name", :value=>@event.name %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Date: </label>
    <div class="col-sm-10">
      <%= f.text_field :date, :class=>"form-control", :id=>"date", :value=>@event.date %>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">Description: </label>
    <div class="col-sm-10">
      <%= f.text_area :description, :class=>"form-control", :id=>"description", :value=>@event.description %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= button_tag(type: 'submit', class: "btn btn-red btn-default") do %>
      <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> Submit!
      <% end %>
    </div>
  </div>
<% end %>
