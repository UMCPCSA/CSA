ready = ->	
	$(".button-collapse").sideNav();
	# index page text slide in
	$("#welcome").delay(300).slideDown(500);
	$("#csa").delay(800).slideDown(500);

	# $("#welcome").delay(1300).css("display", "none");
	# home page slideshow
	$('body#homePage').vegas
		timer: false,
		transitionDuration: 500,
		# autoplay: false,
		slides: [
			{src: '<%= asset_path('home_background.jpg')%>'}
			{src: '<%= asset_path('background_2.jpg')%>'}
			{src: '<%= asset_path('background_3.jpg')%>'}
		]
	$('#calendar').fullCalendar 
		googleCalendarApiKey: '<%= ENV["GOOGLE_CALENDAR_API_KEY"] %>'		
		events: 
			googleCalendarId: '3qeg0ij57jgh6k0crbmccl8q5s@group.calendar.google.com'	
# turbolinks treats everything like a single page -> compatible with regular page load and click links
$(document).ready ready
$(document).on 'page:load', ready
