<div class="title">
  <h1>Contact Us</h1>
  <p>Got a burning question? Fill out this form and we'll get back to you soon!</p>
</div>

<%= form_for(:contact, :html => {:class => "form-horizontal"}) do |f| %>
  <div class="form-group">
	<label class="col-sm-2 control-label">First Name:</label>
	<!-- <br/> -->
	<div class="col-sm-10">
		<%= f.text_field :first_name, :required => true, :class => "form-control", :id => "name", :placeholder => "First Name" %>
	</div>
	<!-- <br/> -->
  </div>
  <div class="form-group">
	<label class="col-sm-2 control-label">Last Name</label>
	<!-- <br/> -->
	<div class="col-sm-10">
		<%= f.text_field :last_name, :class => "form-control", :placeholder => "Last Name" %>
	</div>
	<!-- <br/> -->
  </div>
  <div class="form-group">
	<label class="col-sm-2 control-label">Email:</label>
	<!-- <br/> -->
	<div class="col-sm-10">
		<%= f.email_field :email, :required => true, :class => "form-control", :id => "email", :placeholder => "email@example.com" %>
	</div>
	<!-- <br/> -->
  </div>
  <div class="form-group">
	<label class="col-sm-2 control-label">Question:</label>
	<!-- <br/> -->
	<div class="col-sm-10">
		<%= f.text_area :question, :required => true, :class => "form-control", :id => "message", :rows => "3", :placeholder => "Question"%>
	</div>
	<!-- <br/> -->
  </div>
  <div class="form-group">
  	<div class="col-sm-offset-2 col-sm-10">
		<%= button_tag(type: 'submit', class: "btn btn-red btn-default") do %>
		 <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> Send!
		<% end %>
	</div>
  </div>
<% end %>