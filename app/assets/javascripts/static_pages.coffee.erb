ready = ->	
	$("#welcome").delay(300).slideDown(500);
	$("#csa").delay(800).slideDown(500);

	$('body#homePage').vegas
		timer: false,
		transitionDuration: 500,
		# autoplay: false,
		slides: [
			{src: '<%= asset_path('home_background.jpg')%>'}
			{src: '<%= asset_path('background_2.jpg')%>'}
			{src: '<%= asset_path('background_3.jpg')%>'}
		]

	
# turbolinks treats everything like a single page -> compatible with regular page load and click links
$(document).ready ready
$(document).on 'page:load', ready