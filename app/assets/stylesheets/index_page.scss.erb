html {
	min-width: 100%;
	position: relative;
	min-height: 100%;
	overflow-x: hidden;
	overflow-y: hidden;
}
$footerHeight: 20px;
body {
	padding-bottom: $footerHeight;
	// overflow-x: hidden;
	background: image-url('home_background2.jpg') no-repeat center center fixed;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
}
@media (max-width: 1025px) {
    .navbar-header {
        float: none;
    }
    .navbar-toggle {
        display: block;
    }
    .navbar-collapse {
        border-top: 1px solid transparent;
        box-shadow: inset 0 1px 0 rgba(255,255,255,0.1);
    }
    .navbar-collapse.collapse {
        display: none!important;
    }
    .navbar-nav {
        float: none!important;
        margin: 7.5px -15px;
    }
    .navbar-nav>li {
        float: none;
    }
    .navbar-nav>li>a {
        padding-top: 10px;
        padding-bottom: 10px;
    }
    .navbar-text {
        float: none;
        margin: 15px 0;
    }
    /* since 3.1.0 */
    .navbar-collapse.collapse.in { 
        display: block!important;
    }
    .collapsing {
        overflow: hidden!important;
    }
}
nav#indexBar{
	li{
		a {			
			font-size: 24px;
			color: #FFFFFF;
			// font-weight: bold;
		}
		a:hover {
			color: #FFF;
			text-decoration: underline;
			transition: text-decoration 1s;
		}
		a:visited {
			color: #FFF;
		}		
	}
	ul.dropdown-menu {
		padding: 0;
		li {
			a {
