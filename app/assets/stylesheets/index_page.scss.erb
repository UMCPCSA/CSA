html {
	min-width: 100%;
	min-height: 100%;
	position: relative;
	overflow-x: hidden;
}
body {
		background: image-url('home_background.jpg') no-repeat center center fixed;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
}
nav#indexBar {
	/* the logo */
	ul.title-area {		
		padding-left: 20px;
		img {
			// padding-left: 20px;
			margin-top: 10px;
		}
	}
}
div#welcome_intro {	
	width: 1025px;
	height: 120px;
	margin: auto;
	position: absolute;
	top: 0; bottom: 0; left: 0; right: 0;
	// transform: translateY(-50%);
	h3#welcome {
		color: #FFF;
		font-weight: 400;
		font-size: 30px;
		margin-bottom: -30px;
		padding-left: 50px;
	}
	h1#csa {
		color: #FFF;
		font-weight: 600;
		font-size: 72px;
		text-shadow: 2px 2px #181818;
	}
}

