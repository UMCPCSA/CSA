<%= form_for(:admin, :html=> {:class=>"form-horizontal"}) do |f| %>
    <div class="form-group">
        <label class="col-sm-2 control-label">Email: </label>
        <div class="col-sm-10">
            <%= f.text_field :email, :required=>true, :class=> "form-control", :id=> "email", :placeholder=>"email@email.com" %>
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Password: </label>
        <div class="col-sm-10">
            <%= f.password_field :password, :required=>true, :class=>"form-control", :id=>"password" %>
        </div>
    </div>

    <div class="form-group">

      <div class="col-sm-offset-2 col-sm-10">
        <%= button_tag(type: 'submit', class: "btn btn-red btn-default") do %>
        <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> Submit!
        <% end %>
      </div>

    </div>

<% end %>
