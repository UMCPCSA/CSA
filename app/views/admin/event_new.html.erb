<%= form_for(:event, :html => {:class=>"form-horizontal"}) do |f| %>
  <div class="form-group">
    <label class="col-sm-2 control-label">Name: </label>
    <div class="col-sm-10">
      <%= f.text_field :name, :required=>true, :class=>"form-control", :id=>"name", :placeholder=>"Event Name" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Date: </label>
    <div class="col-sm-10">
      <%= f.text_field :date, :required=>true, :class=>"form-control", :id=>"date", :placeholder=>"January 1, 2016" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Description: </label>
    <div class="col-sm-10">
      <%= f.text_area :description, :required=>true, :class=>"form-control", :id=>"description", :placeholder=>"This event is the new year!" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Pictures: </label>
    <div class="col-sm-10">
      <%= f.text_field :pictures, :class=>"form-control", :id=>"pictures" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= button_tag(type: 'submit', class: "btn btn-red btn-default") do %>
      <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> Submit!
      <% end %>
    </div>
  </div>
<% end %>
